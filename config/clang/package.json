[ {
    "version":   "3.6.1",
    "tags": ["latest","default","stable"],
    "depends": [ "cmake" ],
    "url":   "http://llvm.org/releases/{version}",
    "dirname":   "{name}-{version}",
    "configure": "mkdir build; cd build; cmake -G \"Unix Makefiles\" -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX={installdir}/{dirname} ..",
    "make": "cd {builddir}/clang-{version}/build; make -j4",
    "install": "cd {builddir}/clang-{version}/build; make install"
} ]
